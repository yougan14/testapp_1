
<div class="container mt-4">
<div class="card">
  <h1 class="card-header">Show articles</h1>
  <p class="card-header font-italic">by <%= @article.user.username if @article.user %></p>
  <div class="card-body">
  <p><strong>Title: </strong><%= @article.title %> </p>
  <p><strong>Description: </strong><%= @article.description %> </p>
  
  <%= link_to 'Edit', edit_article_path(@article), class:"btn btn-success" %> |
  <%= link_to 'Delete', article_path(@article), method: :delete, class:"btn btn-danger", data: { confirm: "Are you sure?" } %> |
  <%= link_to 'Return to articles listing', articles_path, class:"btn btn-primary" %> 
  
   
  </div>
</div>
</div>




