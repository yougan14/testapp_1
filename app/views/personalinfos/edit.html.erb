
<div class= "container">
<h1 style="text-align: center">Edit Personal Information</h1>
<% if @personalinfo.errors.any? %>
<h2>The following errors prevented the information from being saved</h2>
<ul>
<% @personalinfo.erors.full_messages.each do |msg| %>
<li><%= msg %></li> 
<% end %>
</ul>
<% end %>


<%= form_with(model: @personalinfo, local:true) do |f| %>
<form>
<div class="row g-3">
  <div class="col">
<%= f.label :name, class:"form-label"%>
<%= f.text_field :name, class:"form-control"%>
</div>
<div class="col">
<%= f.label :email, class:"form-label" %>
<%= f.text_field :email, class:"form-control" %>

</div>
  <div class="col">
  <%= f.label :mobile_number, class:"form-label" %>
<%= f.text_field :mobile_number, class:"form-control" %><br/>
</div>
</div>
<div class="row g-3">
  <div class="col">

<%= f.label :blood_group, class:"form-label" %>
<%= f.text_field :blood_group, class:"form-control" %><br/>
</div>

<div class="col">
<%= f.label :date_of_birth, class:"form-label" %>
<%= f.text_field :date_of_birth, class:"form-control" %><br/>
</div>


<div class="col">
<%= f.label :gender, class:"form-label" %>
<%= f.text_field :gender, class:"form-control" %><br/>
</div>
</div>
<div class="row g-1">

<div class="col-12">
<%= f.label :address, class:"form-label" %>
<%= f.text_area :address, class:"form-control" %><br/>
</div>
</div>

<div class="row g-2">
<div class="col-2">
<%= f.label :state, class:"form-label" %>
<%= f.text_field :state, class:"form-control" %><br/>
</div>
<div class="col-2">
<%= f.label :country, class:"form-label" %>
<%= f.text_field :country, class:"form-control" %><br/>
</div>
</div>
 
<div class="col-12" id="info_button">
<%= f.submit "Update Personal Information", class:"btn btn-primary" %>
<% end %>
  </div>
  



